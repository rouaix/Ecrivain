# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# Database Configuration
DB_HOST=your_database_host
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASS=your_secure_password
DB_PORT=3306

# Security
SESSION_DOMAIN=your_domain.com
JWT_SECRET=change_this_to_a_random_64_character_string_for_production

# Debug (0 = production, 3 = development)
DEBUG=0

# Email / SMTP (laisser vide pour utiliser mail() natif)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_FROM=noreply@example.com
SMTP_FROM_NAME=Écrivain
# SMTP_SECURE=tls  (tls ou ssl — détecté automatiquement si absent)
